%section#head-a
  =image_tag("default.png", :alt => "Default Avatar")
  %h2= @current_company
  %p.company-title Quality through passion
  %ul.company-resume
    %li
      Current projects:
      %span= @current_company.projects.count
    %li
      Number of workers:
      %span= @current_company.users.count
%h1 Project
%div{:class => "form-a", :id => "project-new"}
  - form_for @project, :url => project_path(@project) do |f|
    = f.error_messages
    = render :partial => "form", :object => f
    %p.form-submit
      %span.button= f.submit "Update project"