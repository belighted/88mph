%section#head-a
  %h2= @project.name
  %p.project-title= @project.description
  %ul.project-resume
    %li
      Total time:
      %span= @project.total_time
    %li
      This month:
      %span= @project.total_time_this_month
    %li
      This week:
      %span= @project.total_time_this_week
%h1 Workers on the project
%section
  - if @project.participations.any?
    %ul#project-members
      - @project.participations.each do |part|
        %li
          .member-infos
            =image_tag(part.user.avatar.url(:thumb))
            %h3= part.user
            %p.user-role= part.user.role
          %ul.member-time
            %li
              Total time:
              %span= part.total_time
            %li
              This month:
              %span= part.total_time_this_month
            %li
              This week:
              %span= part.total_time_this_week
  - else
    %p There is nobody participating on this project.
