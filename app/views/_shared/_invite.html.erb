<div id="invite-user">
  <% form_for :inviation, :url => invitations_path do |f| %>
    <%= f.error_messages %>
    <ol>
      <li>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </li>
    </ol>
    <p><%= f.submit %></p>
  <% end %>
</div>

